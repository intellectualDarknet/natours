extends base

//-  here we extends base so this we have block content described down here
//- works as in classes

block content 

  main.main
    .card-container

      //- pug contains inner loops so we than call EACH   IN   
      //- and on 1 righter  level will be called .card and everything righter than
      //- that. So this is how cards will be builded!
      each tour in tours
        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
                //- expects string so this is why we use ES6 $
                //- tour.imageCover is only the name so we need to connect it from the public
                //- folder
                //-  toLocaleString convert date in nice readable string
              img.card__picture-img(src=`img/tours/${tour.imageCover}`, alt=`${tour.name}`)
            h3.heading-tertirary
              span The Forest Hiker
 
          .card__details
            h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-day tour`
            p.card__text= tour.summary
            .card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-map-pin')
              span= tour.startLocation.description
            .card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-calendar')
              span= tour.startDates[0].toLocaleString('en-us', {month: 'long', year: 'numeric'})
            .card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-flag')
              span= `${tour.startLocation.locations.length} stops`
            .card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-user')
              span= `${tour.maxGroupSize} people`

          .card__footer
            p
              //- create space between fields with |  !!!
              span.card__footer-value= `$${tour.price} `
              span.card__footer-text per person
            p.card__ratings
              span.card__footer-value= tour.ratingsAverage
              |
              span.card__footer-text= ` rating ${tour.ratingsQuantity} `
              //- `/tours/${tour.slug}` starts with / because it is relative url so from the start point 
              //- it just add tours...
            a.btn.btn--green.btn--small(href=`/tours/${tour.slug}`) Details